  </div>

  <div class="cards-container">
  <h2 class="all_cocktails">Cyber Cocktail List</h2>
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
      <!-- <div class="card-self"> -->
      <div class="card-self">
        <% if cocktail.photo.attached? == true %>
        <div class="card-background-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, height: 400, width: 300, crop: :fill %>)">
        <% end %>
          <h5><%= link_to cocktail.name, cocktail_path(cocktail.id) %></h5>
            <td>

            </td>
        </div>
      </div>
      <% end %>
    </div>
  </div>



