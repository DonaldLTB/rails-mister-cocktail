<div class="header">
  <h4>Cocktail</h4>
  <%= link_to 'Add Cocktail', new_cocktail_path, class: "btn btn-outline-primary" %>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %> <%= link_to "Remove",
      dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
    <li><%= dose.ingredient.name %></li>
  <% end %>
</ul>

<%= link_to 'Back', cocktails_path %>
<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %>
